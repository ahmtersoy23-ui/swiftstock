# ============================================
# WMS BACKEND - DEVELOPMENT DOCKERFILE
# ============================================

FROM node:20-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy source code
COPY . .

# Set environment
ENV NODE_ENV=development
ENV PORT=3001

# Expose port
EXPOSE 3001

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
