# ============================================
# SwiftStock WMS Backend - Environment Variables
# Updated for pricelab_db shared database
# ============================================

# Database Configuration (Shared pricelab_db)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pricelab_db
DB_USER=swiftstock
DB_PASSWORD=your_secure_password_here

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_jwt_secret_min_32_characters_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
ALLOWED_ORIGINS=https://swiftstock.iwa.web.tr,https://www.iwa.web.tr

# Logging
LOG_LEVEL=info

# Optional: Redis Cache (if needed)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
